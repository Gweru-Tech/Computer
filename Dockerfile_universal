# Universal Dockerfile for NtandoComputer Enhanced
# Compatible with all cloud platforms and local deployment

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    DEPLOYMENT_ENV=docker \
    HOST=0.0.0.0 \
    PORT=5001 \
    STORAGE_PATH=/app/storage \
    DATABASE_PATH=/app/ntando_computer_universal.db \
    FLASK_ENV=production

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    wget \
    git \
    sqlite3 \
    net-tools \
    procps \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements_universal.txt .
RUN pip install --no-cache-dir -r requirements_universal.txt

# Copy application code
COPY computer_enhanced.py .
COPY ui/ ./ui/

# Create storage directories
RUN mkdir -p storage/apps storage/users storage/backups storage/logs storage/temp \
    storage/desktops storage/packages storage/media

# Set permissions
RUN chmod +x /app

# Create non-root user for security
RUN useradd --create-home --shell /bin/bash ntando \
    && chown -R ntando:ntando /app
USER ntando

# Expose port
EXPOSE 5001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:5001/api/system/info || exit 1

# Start command
CMD ["gunicorn", "--bind", "0.0.0.0:5001", "--workers", "1", "--timeout", "120", "computer_enhanced:app"]